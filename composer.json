{
    "name": "gaelreyrol/clevercloud-php",
    "description": "A PHP client for Clever Cloud API",
    "keywords": [
        "clevercloud",
        "php"
    ],
    "homepage": "https://github.com/gaelreyrol/clevercloud-php",
    "license": "MIT",
    "authors": [
        {
            "name": "GaÃ«l Reyrol",
            "email": "me@gaelreyrol.dev"
        }
    ],
    "require": {
        "php": "^7.4",
        "guzzlehttp/guzzle": "^7.2",
        "guzzlehttp/oauth-subscriber": "^0.4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^3.18",
        "vlucas/phpdotenv": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "CleverCloud\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CleverCloud\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
